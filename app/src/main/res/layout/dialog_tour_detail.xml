<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    >

    <ImageView
        android:id="@+id/imgTourDetail"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvTourName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tour Tanah Lot Bali"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tvTourLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bali, Indonesia"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_location"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvTourDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durasi: 3 Hari 2 Malam"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvTourRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="★★★★★"
        android:textSize="16sp"
        android:textColor="#FFD600"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvTourPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mulai dari Rp 2.000.000"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvTourDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi tour akan tampil di sini."
        android:textSize="14sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvItineraryLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rencana Kegiatan"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/tvItinerary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvIncludedLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Termasuk"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/tvIncluded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvExcludedLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tidak Termasuk"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/tvExcluded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/btnCloseDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tutup"
        android:layout_marginTop="16dp"/>

</LinearLayout> 